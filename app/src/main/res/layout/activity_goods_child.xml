<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zzh.dell.guoku.activity.GoodsChildActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorWhite">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@mipmap/back_press"
            android:onClick="clickBack"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goods"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_back"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/g_line"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">
                <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                    android:id="@+id/goods_child_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager>
                <ImageView
                    android:id="@+id/goods_child_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:id="@+id/goods_child_ll"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="bottom"></LinearLayout>
            </FrameLayout>
            <TextView
                android:id="@+id/goods_child_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/image_heart01"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/icon_like"
                    android:padding="10dp"
                    android:onClick="clickHeart"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/image_note01"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/comment_2"
                    android:padding="10dp"
                    android:onClick="clickNote"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/image_more01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/more_shop"
                    android:padding="10dp"
                    android:onClick="clickMore"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <Button
                android:id="@+id/goods_child_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_corner"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/g_line"/>
            <LinearLayout
                android:id="@+id/goods_child_like_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/click_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:id="@+id/text_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:clickable="false"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/to_rigth"
                        android:clickable="false"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <GridView
                    android:id="@+id/goods_child_grid"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:numColumns="7">
                </GridView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/g_line"/>
            </LinearLayout>
           <com.zzh.dell.guoku.view.MyListView
               android:id="@+id/goods_child_contain"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
           </com.zzh.dell.guoku.view.MyListView>
            <com.zzh.dell.guoku.view.MyGridView
                android:id="@+id/ad_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:horizontalSpacing="8dp"
                android:verticalSpacing="8dp"
                android:layout_marginBottom="10dp">
            </com.zzh.dell.guoku.view.MyGridView>
        </LinearLayout>
    </ScrollView>
</LinearLayout >
