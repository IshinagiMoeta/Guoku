<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/product_iv_likes"
        style="@style/layout_width_more"
        android:layout_marginRight="24.0dip"
        android:layout_weight="1.0"
        android:src="@mipmap/like_gary" />

    <ImageView
        android:id="@+id/product_tv_comments"
        style="@style/layout_width_more"
        android:layout_marginRight="24.0dip"
        android:layout_weight="1.0"
        android:src="@mipmap/comment_2" />

    <ImageView
        android:id="@+id/product_tv_mores"
        style="@style/layout_width_more"
        android:layout_marginRight="24.0dip"
        android:layout_weight="1.0"
        android:src="@mipmap/more_shop" />
</LinearLayout>