<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/category_entity_grid_item_img"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/category_entity_grid_item_factory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/category_entity_grid_item_img"
        android:layout_below="@+id/category_entity_grid_item_img"
        android:ellipsize="end"
        android:lines="1"
        android:text="123"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/category_entity_grid_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/category_entity_grid_item_factory"
        android:layout_below="@+id/category_entity_grid_item_factory"
        android:ellipsize="end"
        android:lines="1"
        android:text="123"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorbgBlack" />

    <TextView
        android:id="@+id/category_entity_grid_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/category_entity_grid_item_name"
        android:layout_below="@+id/category_entity_grid_item_name"
        android:ellipsize="end"
        android:lines="1"
        android:text="123"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/colorPrimary" />

</RelativeLayout>