<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:contentDescription="@string/app_name"
        android:layout_margin="10dp"
        android:id="@+id/item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/item_title"
        android:layout_alignTop="@+id/item_img"
        android:layout_toEndOf="@+id/item_img" />

    <TextView
        android:textColor="@color/g_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/item_price"
        android:layout_below="@+id/item_title"
        android:layout_toEndOf="@+id/item_img" />

    <ImageView
        android:contentDescription="@string/app_name"
        android:src="@mipmap/like_gary"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/item_like"
        android:layout_toStartOf="@+id/item_like" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/item_like"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toStartOf="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/item_talk"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/item_img"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:contentDescription="@string/app_name"
        android:src="@mipmap/talk"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/item_talk"
        android:layout_toStartOf="@+id/item_talk" />

</RelativeLayout>