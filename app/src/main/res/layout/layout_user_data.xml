<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_stub_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zzh.dell.guoku.view.LayoutItemView
        android:id="@+id/tv_user_like"
        style="@style/therm_tab_title_style"
        android:layout_marginTop="12.0dip"
        app:textColorLeft="@color/black_body"
        app:textLeft="我的喜爱" />

    <com.zzh.dell.guoku.view.ScrollViewWithGridView
        android:id="@+id/gridview_like"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:cacheColorHint="#00000000"
        android:gravity="center"
        android:horizontalSpacing="4.0dip"
        android:listSelector="#00000000"
        android:numColumns="4"
        android:paddingBottom="4.0dip"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:scrollbars="none"
        android:verticalSpacing="4dp" />

    <include
        layout="@layout/line_gray"
        android:background="@color/text_bg_box" />

    <com.zzh.dell.guoku.view.LayoutItemView
        android:id="@+id/tv_user_article"
        style="@style/therm_tab_title_style"
        android:layout_marginTop="10.0dip"
        app:textColorLeft="@color/black_body"
        app:textLeft="我的图文" />

    <com.zzh.dell.guoku.view.ScrollViewWithListView
        android:id="@+id/listview_user_article"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:divider="@color/g_line"
        android:dividerHeight="1dp"
        android:listSelector="@android:color/transparent" />

    <include
        layout="@layout/line_gray"
        android:background="@color/text_bg_box" />

    <com.zzh.dell.guoku.view.LayoutItemView
        android:id="@+id/tv_user_comment"
        style="@style/therm_tab_title_style"
        android:layout_marginTop="10.0dip"
        app:textColorLeft="@color/black_body"
        app:textLeft="我的点评" />

    <com.zzh.dell.guoku.view.ScrollViewWithListView
        android:id="@+id/listview_commit"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:divider="@color/g_line"
        android:dividerHeight="1.0px"
        android:listSelector="@android:color/transparent" />

    <include
        layout="@layout/line_gray"
        android:background="@color/text_bg_box" />

    <com.zzh.dell.guoku.view.LayoutItemView
        android:id="@+id/tv_user_tag"
        style="@style/therm_tab_title_style"
        android:layout_marginTop="10.0dip"
        app:textColorLeft="@color/black_body"
        app:textLeft="我参与的标签" />

    <include
        layout="@layout/line_gray"
        android:background="@color/text_bg_box" />

    <com.zzh.dell.guoku.view.LayoutItemView
        android:id="@+id/tv_user_article_zan"
        style="@style/therm_tab_title_style"
        android:layout_marginTop="10.0dip"
        app:textColorLeft="@color/black_body"
        app:textLeft="我赞过的图文" />

    <include
        layout="@layout/line_gray"
        android:background="@color/text_bg_box" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10.0dip" />
</LinearLayout>